# TLS Configuration
TLS_ENABLED=true
TLS_VERSION=1.3
TLS_CIPHER_SUITE="TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:TLS_AES_128_GCM_SHA256"
TLS_VERIFY_PEER=true
TLS_VERIFY_PEER_NAME=true

# Data Encryption
ENCRYPT_SENSITIVE_DATA=true
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_ROTATION_DAYS=90

# Argon2ID Password Hashing
HASH_DRIVER=argon2id
ARGON2_MEMORY=65536
ARGON2_THREADS=1
ARGON2_TIME=4

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=180
AUDIT_LOG_SENSITIVE_DATA=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPT=true
BACKUP_DESTINATION=local

# Filament Configuration
FILAMENT_DOMAIN=null
FILAMENT_PATH=painel
FILAMENT_TIMEZONE="${APP_TIMEZONE}"
FILAMENT_LOCALE="${APP_LOCALE}"

# ArcGIS Configuration
ARCGIS_API_KEY=your-arcgis-api-key-here
ARCGIS_BASEMAP=topo-vector
ARCGIS_CENTER_LAT=-15.7801
ARCGIS_CENTER_LNG=-47.9292
ARCGIS_ZOOM_LEVEL=4

# PostGIS Configuration
POSTGIS_VERSION=3.4
POSTGIS_SRID=4326
POSTGIS_GEOMETRY_TYPE=geometry

# Layer Configuration
LAYER_MAX_FILE_SIZE=10240
LAYER_ALLOWED_TYPES=point,linestring,polygon,multipoint,multilinestring,multipolygon
LAYER_CACHE_TTL=3600

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_PAGINATION_DEFAULT=15
API_PAGINATION_MAX=100

# Frontend Configuration
FRONTEND_PUBLIC_MAP_ENABLED=true
FRONTEND_LAYER_TOGGLE=true
FRONTEND_SEARCH_ENABLED=true

# Telescope (Development Only)
TELESCOPE_ENABLED=false
TELESCOPE_PATH=telescope

# Monitoring
MONITORING_ENABLED=false
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2

# Performance
OPCACHE_ENABLE=1
OPCACHE_MEMORY=128
RESPONSE_CACHE_ENABLED=false
RESPONSE_CACHE_TTL=3600

# Development Tools
DEBUGBAR_ENABLED=false
CLOCKWORK_ENABLED=false
