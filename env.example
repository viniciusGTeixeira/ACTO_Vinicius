# Application
APP_NAME="ACTO Maps"
APP_ENV=local
APP_KEY=base64:EFzZB0nylpeXk9YUiWWAauTw+wOQjWxKHL4U6gvmppo=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8000
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# PHP
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel_user
DB_PASSWORD=secret

# Cache
CACHE_STORE=database
CACHE_PREFIX=acto_

# Filesystem
FILESYSTEM_DISK=s3

# Queue
QUEUE_CONNECTION=database

# Broadcasting
BROADCAST_CONNECTION=log

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Session Security Settings
SESSION_IDLE_TIMEOUT=30
SESSION_ABSOLUTE_TIMEOUT=480
SESSION_REGENERATE_ON_LOGIN=true

# MinIO / S3 Configuration
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=acto-maps
AWS_ENDPOINT=http://127.0.0.1:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_URL=http://127.0.0.1:9000/acto-maps

# Vite
VITE_APP_NAME="${APP_NAME}"

# Rate Limiting Configuration
RATE_LIMIT_PUBLIC_API=60
RATE_LIMIT_PUBLIC_API_DECAY=1
RATE_LIMIT_AUTHENTICATED_API=100
RATE_LIMIT_AUTHENTICATED_API_DECAY=1
RATE_LIMIT_ADMIN_API=30
RATE_LIMIT_ADMIN_API_DECAY=1
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_DECAY=1

# Two-Factor Authentication
TWOFACTOR_ENABLED=true
TWOFACTOR_REQUIRED_FOR_ADMIN=true
TWOFACTOR_ISSUER="${APP_NAME}"
TWOFACTOR_WINDOW=1
TWOFACTOR_RECOVERY_CODES=8

# Two-Factor via WhatsApp (Evolution API)
TWOFACTOR_WHATSAPP_ENABLED=true
EVOLUTION_API_URL=https://api.evolution-api.com
EVOLUTION_API_KEY=your-api-key-here
EVOLUTION_INSTANCE_NAME=your-instance-name
TWOFACTOR_WHATSAPP_TEMPLATE="[${APP_NAME}] Seu codigo de verificacao: {code}\n\nValido por 5 minutos.\n\nNao compartilhe este codigo."

# GeoIP Configuration
GEOIP_ENABLED=true
GEOIP_API_URL=https://ipapi.co
GEOIP_API_KEY=
GEOIP_CACHE_DURATION=86400

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_MAX_ATTEMPTS=3
ANOMALY_TIME_WINDOW=3600
ANOMALY_MIN_DISTANCE_KM=500
ANOMALY_ACTION=block

